
<%=form_for @project do |f| %>

 <%= render partial: 'layouts/errors', locals: {object: @project} %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description%>
  <%= f.text_field :description %>

  <%= f.label :target_completion_date%>
  <%= f.date_field :target_completion_date%>

  <%= f.label :completion_date%>
  <%= f.date_field :completion_date%>

  <br>
  <% if !params[:client_id]%>
  <%= f.label :client_id, "Select a Client" %>
  <%= f.collection_select :client_id, Client.all, :id, :company_name, prompt: true %>
  <% else %>
    <%= f.hidden_field :client_id, :value => @client.id %>
  <% end %>


  <%= f.submit "Submit" %>
<% end %>
