<%=form_for [@client, @project] do |f| %>

 <%= render partial: 'layouts/errors', locals: {object: @project} %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description%>
  <%= f.text_field :description %>

  <% if !params[:client_id]%>
  <%= f.label :client_id, "Select a Client" %>
  <%= f.collection_select :client_id, Client.all, :id, :company_name, prompt: true %>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>
